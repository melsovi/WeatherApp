<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/weatherFragment">

    <fragment
        android:id="@+id/weatherFragment"
        android:name="com.company.weatherapp.ui.WeatherFragment"
        android:label="fragment_weather"
        tools:layout="@layout/fragment_weather">
        <argument
            android:name="cityName"
            android:defaultValue="Bishkek"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_weatherFragment_to_weatherSearchFragment"
            app:destination="@id/weatherSearchFragment" />
    </fragment>
    <fragment
        android:id="@+id/weatherSearchFragment"
        android:name="com.company.weatherapp.ui.weather_search.WeatherSearchFragment"
        android:label="fragment_weather_search"
        tools:layout="@layout/fragment_weather_search">
        <action
            android:id="@+id/action_weatherSearchFragment_to_weatherFragment"
            app:destination="@id/weatherFragment">
            <argument
                android:name="cityName"
                app:argType="string"
                app:nullable="false" />
        </action>
    </fragment>
</navigation>